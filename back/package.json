{
  "name": "polytales-backend",
  "version": "1.0.0",
  "private": true,
  "description": "PolyTales backend (PostgreSQL + Sequelize)",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node --max-http-header-size=65536 app.js",
    "dev": "nodemon",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:status": "sequelize db:migrate:status",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo:all",
    "db:reset:local": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.28.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
